{
    "ConnectionStrings": {
        "Database": "Server=localhost;Port=3306;Database=clean_architecture;User=root;Password=;"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    },
    "Jwt": {
        "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
        "Issuer": "clean-architecture",
        "Audience": "developers",
        "ExpirationInMinutes": 180
    }
}
